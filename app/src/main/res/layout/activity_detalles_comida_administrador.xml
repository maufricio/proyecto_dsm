<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesComida_AdministradorActivity"
    android:orientation="vertical"
    android:background="@color/color_fondo">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/menuSuperior"
        android:name="com.ps212544_ml211022_cr200574_al202809.myapplication.MenuSuperiorFragment"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        tools:layout="@layout/fragment_menu_superior" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">
                <!-- Aquí irá el logo de la flecha-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id = "@+id/btnRegresarAtras"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:src = "@drawable/left_arrow"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regularinterfont"
                android:textColor="@color/black"
                android:text="Detalles de la Comida"
                android:textAlignment="center"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regularinterfont"
                android:textColor="@color/color_gray"
                android:text="(Puedes modificar los campos)"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="13dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green_dark_container"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                >
                <ImageView
                    android:id = "@+id/imagenDetallesComida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >
                <EditText
                    android:id = "@+id/nombreComidaDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/regularinterfont"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textStyle="italic"
                    android:text="asdasda"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/regularinterfont"
                        android:textColor="@color/white"
                        android:text="Descripción:"
                        android:textAlignment="textStart"
                        android:layout_marginStart="10dp"
                        android:textSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/descripcionComidaDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/regularinterfont"
                        android:textColor="@color/white"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="asdasda"
                        android:textStyle="italic"
                        android:textAlignment="textStart"
                        android:textSize="18dp"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/regularinterfont"
                        android:textColor="@color/white"
                        android:text="Precio:"
                        android:textAlignment="textStart"
                        android:layout_marginStart="10dp"
                        android:textSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <EditText
                        android:id = "@+id/precioComidaDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/regularinterfont"
                        android:textColor="@color/white"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="4.00"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/regularinterfont"
                            android:textColor="@color/white"
                            android:text="Día:"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id = "@+id/diaComidaDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/regularinterfont"
                            android:textColor="@color/white"
                            android:text="Lunes"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/regularinterfont"
                            android:textColor="@color/white"
                            android:text="Tiempo:"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id = "@+id/tiempoComidaDetalle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/regularinterfont"
                            android:textColor="@color/white"
                            android:text="Lunes"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Overlay Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modificarComidaButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/blue_marine"
                    android:paddingTop="10dp"
                    android:paddingBottom = "10dp"
                    app:cornerRadius="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Modificar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/eliminarComidaButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/red_eliminar"
                    android:paddingBottom = "10dp"
                    app:cornerRadius="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Eliminar" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
</LinearLayout>